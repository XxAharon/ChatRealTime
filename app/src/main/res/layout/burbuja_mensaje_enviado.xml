<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <LinearLayout
        android:id="@+id/BurbujaDelMensajeEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/fondo_burbuja"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"

        android:elevation="2dp"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.8" >

        <TextView
            android:id="@+id/tipoDeUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oscar MonÃ¡rdez"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/contenidoDelMensajeEnviado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, este es el mensaje que se ve dentro de la burbuja."
            android:textColor="#000000"
            android:layout_gravity="right"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/horaDeEnvioEnviado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="12:00 pm"
            android:textSize="10sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>